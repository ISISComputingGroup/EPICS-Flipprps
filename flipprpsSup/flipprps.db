record(bo, "$(P)DISABLE")
{
    field(DESC, "Disable comms")
    field(PINI, "YES")
    field(VAL, "$(DISABLE=0)")
    field(OMSL, "supervisory")
    field(ZNAM, "COMMS ENABLED")
    field(ONAM, "COMMS DISABLED")

}

record(bo, "$(P)POLARITY")
{
    field(DESC, "Set flipper polarity up or down")
    field(DTYP, "stream")
    field(ZNAM, "Down")
    field(ONAM, "Up")
    field(OUT, "@flipprps.proto setPolarity $(PORT)")
    info(INTEREST, "HIGH")
    info(alarm, "FLIPPRPS")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:POLARITY")
    field(SDIS, "$(P)DISABLE")
}
alias("$(P)POLARITY", "$(P)POLARITY:SP")

record(stringin, "$(P)ID")
{
    field(DESC, "ID of device")
    field(DTYP, "stream")
    field(INP, "@flipprps.proto getId $(PORT)")
    field(PINI, "YES")
    field(SCAN, "10 second")
    info(alarm, "FLIPPRPS")
    field(SIML, "$(P)SIM")
    field(SIOL, "$(P)SIM:ID")
    field(SDIS, "$(P)DISABLE")
}

record(bo, "$(P)SIM")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(ZNAM, "NO")
    field(ONAM, "YES")
    field(VAL, "$(RECSIM=0)")
}

record(bi, "$(P)SIM:POLARITY")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
}
alias("$(P)SIM:POLARITY", "$(P)SIM:POLARITY:SP")

record(stringout, "$(P)SIM:ID")
{
    field(SCAN, "Passive")
    field(DTYP, "Soft Channel")
    field(VAL, "Flipper")
}
